# Environment Variables for ABE Application
# Copy this file to .env and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Moota Configuration
MOOTA_API_KEY=your_moota_api_key_here
MOOTA_ACCOUNT_ID=your_moota_account_id_here
MOOTA_SECRET_TOKEN=your_webhook_secret_token_from_moota_dashboard

# Backend Server Configuration (for Webhook)
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# API Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_WINDOW_MS=60000

# Security Configuration  
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp,audio/mpeg,audio/wav,audio/mp3,audio/m4a

# Performance Settings
VITE_CACHE_TTL=300000
VITE_BATCH_SIZE=3

# Features Toggle
VITE_ENABLE_AUDIO_RECORDING=true
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_QRIS_PAYMENT=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error